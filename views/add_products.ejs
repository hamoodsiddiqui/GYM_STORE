<!DOCTYPE html>
<html>
<head>
    <title>Add Product</title>
</head>
<body>
    <h1>Add Product</h1>

    <form action="/add-products" method="POST">
        <label for="product_name">Product Name:</label>
        <input type="text" id="product_name" name="product_name" required><br><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea><br><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required><br><br>

        <label for="stock_quantity">Stock Quantity:</label>
        <input type="number" id="stock_quantity" name="stock_quantity" required><br><br>

        <label>Product Type:</label><br>
        <input type="radio" id="supplements" name="product_type" value="Supplements" required>
        <label for="supplements">Supplements</label>
        <input type="radio" id="merchandise" name="product_type" value="Merchandise" required>
        <label for="merchandise">Merchandise</label>
        <input type="radio" id="gym_equipment" name="product_type" value="Gym Equipment" required>
        <label for="gym_equipment">Gym Equipment</label><br><br>
        <div id="supplements_fields" style="display: none">
            <label for="weight">Weight:</label>
            <input type="number" id="weight" name="weight"><br><br>
        
            <label for="supplement_brand">Brand:</label>
            <select id="supplement_brand" name="brand">
                <option >Select Brand</option> <!-- Default blank option -->
                <option value="Brand A">Brand A</option>
                <option value="Brand B">Brand B</option>
                <option value="Brand C">Brand C</option>
            </select><br><br>
        
            <label for="expiry_date">Expiry Date:</label>
            <input type="date" id="expiry_date" name="expiry_date"><br><br>
        </div>
        
        <div id="merchandise_fields" style="display: none">
            <label for="size">Size:</label>
            <input type="text" id="size" name="size"><br><br>
        
            <label for="merchandise_brand">Brand:</label>
            <select id="merchandise_brand" name="brand">
                <option>Select Brand</option> <!-- Default blank option -->
                <option value="Brand X">Brand X</option>
                <option value="Brand Y">Brand Y</option>
                <option value="Brand Z">Brand Z</option>
            </select><br><br>
        
            <label for="color">Color:</label>
            <input type="text" id="color" name="color"><br><br>
        </div>
        
        <div id="gym_equipment_fields" style="display: none">
            <label for="weight">Weight:</label>
            <input type="number" id="weight" name="weight"><br><br>
            
            <label for="material">Material:</label>
            <input type="text" id="material" name="material"><br><br>
        </div>

        <input type="submit" value="Add Product">
    </form>
    <script>
        // Function to show/hide input fields based on the selected product type
        const productTypeRadios = document.querySelectorAll('input[name="product_type"]');
        const supplementsFields = document.getElementById('supplements_fields');
        const merchandiseFields = document.getElementById('merchandise_fields');
        const gymEquipmentFields = document.getElementById('gym_equipment_fields');
    
        function toggleFields() {
            supplementsFields.style.display = 'none';
            merchandiseFields.style.display = 'none';
            gymEquipmentFields.style.display = 'none';
    
            const selectedProductType = Array.from(productTypeRadios).find(radio => radio.checked);
    
            if (selectedProductType) {
                if (selectedProductType.value === 'Supplements') {
                    supplementsFields.style.display = 'block';
                } else if (selectedProductType.value === 'Merchandise') {
                    merchandiseFields.style.display = 'block';
                } else if (selectedProductType.value === 'Gym Equipment') {
                    gymEquipmentFields.style.display = 'block';
                }
            }
        }
    
        toggleFields();
    
        productTypeRadios.forEach(radio => {
            radio.addEventListener('change', toggleFields);
        });
    </script>
</body>
</html>
