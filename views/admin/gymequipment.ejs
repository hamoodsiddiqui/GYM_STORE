<!DOCTYPE html>
<html>
<head>
    <title>Gym Equipment List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f0f0f0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: left;
            height: 150vh;
            align-items: left;
        }

        header {
            align-items: left;
            background-color: f0f0f0;
            padding: 10px 0;
            text-align: left;
            margin-left: 20px;
            margin-top: 20px;
        }

        h1 {
            text-align: left;
            color: #333;
            margin-bottom: 20px;
            align-items: left;
            margin-left: 20px;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #444;
            padding: 10px;
        }

        nav a {
            color: #fff;
            align-items: left;
            text-decoration: none;
            padding: 10px 20px;
            margin: 0 10px;
            border-radius: 5px;
        }

        .box1 {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .products {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
            width: 15vw;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden; /* Hide overflowing content */
        }

        .cover {
            width: 100%;
            height: 15vw;
            background-size: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .details {
            margin: 4px 0;
        }

        .buttons {
            margin: 10px 0;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        form {
            display: inline-block;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/supplements"><i class="fa-solid fa-user"></i>Supplements</a>
        <a href="/gymequipment"><i class="fa-solid fa-user"></i>Equipment</a>
        <a href="/merchandise"><i class="fa-solid fa-user"></i>Merchandise</a>
        <a href="/gymequipment/add"><i class="fa-solid fa-user"></i>Add Gym Equipment</a>
    </nav>

    <header>
        <h1>Gym Equipment List</h1>
    </header>

    <ul class="box1">
        <% data.forEach(item => { %>
            <li>
                <div class="products">
                    <div class="cover" style="background-image: url('http://localhost:3000/<%= item.imageurl %>');">
                        <!-- Thumbnail -->
                    </div>

                    <h4 class="details">Name:</h4> <%= item.product_name %> |
                    <h4 class="details">Description:</h4> <%= item.description %> |
                    <h4 class="details">Price:</h4> <%= item.price %> |
                    <h4 class="details">Stock Quantity:</h4> <%= item.stock_quantity %> |

                    <div class="buttons">
                        <!-- Update Button -->
                        <form action="/gymequipment/update/<%= item.product_id %>" method="GET">
                            <button type="submit">Update</button>
                        </form>

                        <!-- Delete Button -->
                        <form action="/gymequipment/delete/<%= item.product_id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>
</body>
</html>
