<!-- checkout.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Checkout</title>
    <style>
        /* Your styles for checkout page go here */
    </style>
</head>
<body>
    <h1>Checkout</h1>

    <ul>
        <% cartItems.forEach(item => { %>
            <li>
                <img src="http://localhost:3000/<%= item.imageurl %>" alt="<%= item.product_name %> Image">
                <p><strong>Product ID:</strong> <%= item.product_id %></p>
                <p><strong>Name:</strong> <%= item.product_name %></p>
                <p><strong>Price:</strong> <%= item.price %></p>
                <p><strong>Quantity:</strong> <%= item.quantity %></p>
            </li>
        <% }); %>
    </ul>

    <p><strong>Total Amount:</strong> <%= totalAmount + 500.00 %></p>
    <p><strong>Delivery Charges:</strong> 500.00</p>

    <h2>Payment Options:</h2>
    <form action="/submit-order" method="post">
        <!-- Include your payment options here -->
        <label for="paymentMethod">Select Payment Method:</label>
        <select id="paymentMethod" name="paymentMethod">
            <option value="cashOnDelivery">Cash on Delivery</option>
            <option value="paypal" disabled>PayPal (Coming Soon)</option>
            <!-- You can add more options as needed -->
        </select>

        <p><em>More payment options may be available in the future!</em></p>

        <button type="submit">Submit Order</button>
    </form>

    <a href="/cart">Go Back to Cart</a>
</body>
</html>
