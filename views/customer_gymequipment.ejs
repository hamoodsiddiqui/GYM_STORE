<!DOCTYPE html>
<html>
<head>
    <title>Gym Equipment List</title>
    <style>
        /* Your styles for Gym Equipment list go here */

        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 150vh;
        }

        header {
            align-items: left;
            background-color: #f0f0f0;
            padding: 10px 0;
            text-align: left;
            margin-left: 10px;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #444;
            padding: 10px;
        }

        nav a {
            color: #fff;
            align-items: left;
            text-decoration: none;
            padding: 10px 20px;
            margin: 0 10px;
            border-radius: 5px;
        }

        h1 {
            color: #333;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .card {
            width: 15vw;
            border: 1px solid #ddd;
            border-radius: 10px;
            margin-right: 10px;
            overflow: hidden;
        }

        .card .cover {
            width: 100%;
            height: 10vw; /* Adjust the height as needed */
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card .details {
            padding: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/customer/supplements"><i class="fa-solid fa-user"></i>Supplements</a>
        <a href="/customer/gymequipment"><i class="fa-solid fa-user"></i>Equipment</a>
        <a href="/customer/merchandise"><i class="fa-solid fa-user"></i>Merchandise</a>
        <a href="/cart"><i class="fa-solid fa-user"></i>Cart</a>
    </nav>

    <header>
        <h1>Gym Equipment List</h1>
    </header>

    <div class="container">
        <% data.forEach(item => { %>
            <a href="/gymequipment/details/<%= item.product_id %>">
                <div class="card">
                    <div class="cover" style="background-image: url('http://localhost:3000/<%= item.imageurl %>');"></div>
                    <div class="details">
                        <h4 class="details">Name:</h4> <%= item.product_name %> |
                        <h4 class="details">Description:</h4> <%= item.description %> |
                        <h4 class="details">Price:</h4> <%= item.price %> |
                        <h4 class="details">Stock Quantity:</h4> <%= item.stock_quantity %> |
                        <!-- Add additional details specific to Gym Equipment -->
                        <!-- Example: <h4 class="details">Weight:</h4> <%= item.weight %> | -->
                        <!-- Add your buttons or links here -->
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
</body>
</html>
