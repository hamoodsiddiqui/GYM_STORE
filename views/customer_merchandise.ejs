<!DOCTYPE html>
<html>
<head>
    <title>Merchandise List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .card {
            width: 15vw;
            border: 1px solid #ddd;
            border-radius: 10px;
            margin-right: 10px;
            overflow: hidden;
        }

        .card .cover {
            width: 100%;
            height: 10vw; /* Adjust the height as needed */
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card .details {
            padding: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Merchandise List</h1>

    <div class="container">
        <% data.forEach(item => { %>
            <a href="/merchandise/details/<%= item.product_id %>">
                <div class="card">
                    <div class="cover" style="background-image: url('http://localhost:3000/<%= item.imageurl %>');"></div>
                    <div class="details">
                        <h4 class="details">Name:</h4> <%= item.product_name %> |
                        <h4 class="details">Description:</h4> <%= item.description %> |
                        <h4 class="details">Price:</h4> <%= item.price %> |
                        <h4 class="details">Stock Quantity:</h4> <%= item.stock_quantity %> |
                        <h4 class="details">Size:</h4> <%= item.size %> |
                        <h4 class="details">Color:</h4> <%= item.color %> |
                        <!-- Add your buttons or links here -->
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
</body>
</html>
