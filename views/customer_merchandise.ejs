<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Merchandise List</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-gray-800 text-white p-4">
        <a href="/customer/supplements" class="px-4 py-2">Supplements</a>
        <a href="/customer/gymequipment" class="px-4 py-2">Equipment</a>
        <a href="/customer/merchandise" class="px-4 py-2">Merchandise</a>
        <a href="/cart" class="px-4 py-2">Cart</a>
    </nav>

    <header class="p-4">
        <h1 class="text-3xl font-bold">Merchandise List</h1>
    </header>

    <div class="container mx-auto px-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <!-- Iterate over data -->
        <!-- Replace inline styles with Tailwind utility classes -->
        <% data.forEach(item => { %>
            <a href="/merchandise/details/<%= item.product_id %>" class="block">
                <div class="card bg-white shadow-lg rounded-lg overflow-hidden">
                    <div class="cover h-40 bg-gray-300" style="background-image: url('http://localhost:3000/<%= item.imageurl %>');"></div>
                    <div class="details p-4">
                        <h4 class="font-semibold">Name:</h4> <%= item.product_name %> |
                        <h4 class="font-semibold">Description:</h4> <%= item.description %> |
                        <h4 class="font-semibold">Price:</h4> <%= item.price %> |
                        <h4 class="font-semibold">Stock Quantity:</h4> <%= item.stock_quantity %> |
                        <h4 class="font-semibold">Size:</h4> <%= item.size %> |
                        <h4 class="font-semibold">Color:</h4> <%= item.color %> |
                        <!-- Add your buttons or links here -->
                        <button class="btn mt-4 bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">Add to Cart</button>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
</body>
</html>
