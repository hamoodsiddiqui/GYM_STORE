<!DOCTYPE html>
<html>
<head>
    <title>Supplements List</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-gray-800 text-white p-4">
        <a href="/customer/supplements" class="px-4 py-2">Supplements</a>
        <a href="/customer/gymequipment" class="px-4 py-2">Equipment</a>
        <a href="/customer/merchandise" class="px-4 py-2">Merchandise</a>
        <a href="/cart" class="px-4 py-2">Cart</a>
    </nav>

    <header class="p-4">
        <h1 class="text-3xl font-bold">Supplement List</h1>
    </header>

    <div class="container flex flex-wrap gap-10">
        <% data.forEach(item => { %>
            <a href="/supplements/details/<%= item.product_id %>" class="block">
                <div class="card w-72 border border-gray-300 rounded-lg overflow-hidden">
                    <img src='http://localhost:3000/<%= item.imageurl %>' alt="Supplement Image" class="w-full h-48 object-cover rounded-t-lg">
                    <div class="card-body p-4">
                        <h5 class="font-bold text-lg"><%= item.product_name %></h5>
                        <h5 class="text-gray-700 mb-2">$<%= item.price %></h5>
                        <h5 class="text-gray-700 mb-2">Stock Quantity: <%= item.stock_quantity %></h5>
                        <h5 class="text-gray-700 mb-2">Weight: <%= item.weight %></h5>
                        <p class="text-gray-600"><%= item.description %></p>
                        <!-- Add your buttons or links here -->
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
</body>
</html>
