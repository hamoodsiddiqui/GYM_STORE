<!-- merchandise-details.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Merchandise Details</title>
    <style>
        /* Your styles for merchandise details go here */
    </style>
</head>
<body>
    <div>
        <a href="/cart" style="float: right; margin-right: 20px;">Go to Cart</a>
    </div>

    <h1>Merchandise Details</h1>

    <div>
        <img src="http://localhost:3000/<%= merchandise.imageurl %>" alt="Merchandise Image">
        <p><strong>Merchandise ID:</strong> <%= merchandise.product_id %></p>
        <p><strong>Name:</strong> <%= merchandise.product_name %></p>
        <p><strong>Description:</strong> <%= merchandise.description %></p>
        <p><strong>Price:</strong> <%= merchandise.price %></p>
        <p><strong>Stock Quantity:</strong> <%= merchandise.stock_quantity %></p>
        <p><strong>Size:</strong> <%= merchandise.size %></p>
        <p><strong>Color:</strong> <%= merchandise.color %></p>

        <!-- Add to Cart Form -->
        <form action="/merchandise/add-to-cart/<%= merchandise.product_id %>" method="POST">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" min="1" max="<%= merchandise.stock_quantity %>" required>
            <button type="submit">Add to Cart</button>
        </form>
    </div>
</body>
</html>
