<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supplements List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f0f0f0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: left;
        }

        header {
            background-color: #f0f0f0;
            padding: 10px 0;
            text-align: left;
            margin-left: 20px;
        }

        h1 {
            color: #333;
            margin: 0;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #444;
            padding: 10px;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            margin: 0 10px;
            border-radius: 5px;
        }

        .box1 {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin: 20px;
        }

        .products {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            width: 15vw;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
        }

        .cover {
            width: 100%;
            height: 15vw;
            background-size: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .details {
            margin: 0;
        }

        .buttons {
            margin: 10px 0;
            display: flex;
            gap: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        form {
            display: inline-block;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/supplements">Supplements</a>
        <a href="/gymequipment">Equipment</a>
        <a href="/merchandise">Merchandise</a>
        <a href="/supplements/add">Add Supplements</a>
    </nav>

    <header>
        <h1>Supplement List</h1>
    </header>

    <div class="box1">
        <% data.forEach(item => { %>
            <div class="products">
                <div class="cover" style="background-image: url('http://localhost:3000/<%= item.imageurl %>');"></div>

                <h4 class="details">Name:</h4> <%= item.product_name %> |
                <h4 class="details">Description:</h4> <%= item.description %> |
                <h4 class="details">Price:</h4> <%= item.price %> |
                <h4 class="details">Stock Quantity:</h4> <%= item.stock_quantity %> |
                <h4 class="details">Weight:</h4> <%= item.weight %> |

                <div class="buttons">
                    <!-- Update Button -->
                    <form action="/supplements/update/<%= item.product_id %>" method="GET">
                        <button type="submit">Update</button>
                    </form>

                    <!-- Delete Button -->
                    <form action="/supplements/delete/<%= item.product_id %>" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
