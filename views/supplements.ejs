<!DOCTYPE html>
<html>
<head>
    <title>Supplements List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        .thumbnail {
            height: 100%;
            background-size: cover;
            -moz-background-size: cover;
            -webkit-background-size: cover;
            background-position: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .box1 {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .products {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
            width: 15vw;
            border: 1px solid #ddd;
            border-radius: 10px;
        }

        .details {
            margin: 0px;
        }

        .buttons {
            margin: 10px 0px;
        }

        .cover {
            width: 100%;
            height: 15vw;
            margin-bottom: 10px;
            background-size: cover;
            -moz-background-size: cover;
            -webkit-background-size: cover;
            background-position: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        form {
            display: inline-block;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>Supplements List</h1>

    <ul class="box1">
        <% data.forEach(item => { %>
            <li>
                <div class="products">
                    <div class="cover" style="background-image: url('http://localhost:3000/<%= item.imageurl %>');"></div>
                    <a href="/supplements/details/<%= item.product_id %>">
                        <h4 class="details">Name:</h4> <%= item.product_name %> |
                        <h4 class="details">Description:</h4> <%= item.description %> |
                        <h4 class="details">Price:</h4> <%= item.price %> |
                        <h4 class="details">Stock Quantity:</h4> <%= item.stock_quantity %> |
                        <h4 class="details">Weight:</h4> <%= item.weight %> |
                    </a>
                    <div class="buttons">
                        <!-- Update Button -->
                        <form action="/supplements/update/<%= item.product_id %>" method="GET">
                            <button type="submit">Update</button>
                        </form>

                        <!-- Delete Button -->
                        <form action="/supplements/delete/<%= item.product_id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>
</body>
</html>
